// -------------- ADC single read ------------------
// STM32F103C8T6 in LQFP package only supported


#ifndef __ADC_READ_HPP__
#define __ADC_READ_HPP__

#include <stdint.h>

class AdcSingleRead
{
public:
	AdcSingleRead(const AdcNumber adcNumber, const adcChanell adcChanell);

	enum AdcNumber
	{
		ADC_NUMBER1,
		ADC_NUMBER2
	};

	enum AdcChanell
	{
		ADC_CHANELL0,
		ADC_CHANELL1,
		ADC_CHANELL2,
		ADC_CHANELL3,
		ADC_CHANELL4,
		ADC_CHANELL5,
		ADC_CHANELL6,
		ADC_CHANELL7,
		ADC_CHANELL8,
		ADC_CHANELL9
	};


	uint16_t Read();

private:
	AdcNumber	m_adcNumber;
	AdcChanell	m_adcChanell;

	void Init();

	static void DelayMicroseconds(const uint32_t us);

};




#endif	// __ADC_READ_HPP__
