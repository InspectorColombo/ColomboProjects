#ifndef SPRITE_HPP_
#define SPRITE_HPP_

#include <stdint.h>

namespace sprite
{

struct Battery
{
const uint8_t width = 7;
const uint8_t height = 4;

const uint8_t data[] =
{
	0b01111001,
	0b01000101,
	0b00110011,
	0b00001111
};

struct Rectangle
{
const uint8_t width = 18;
const uint8_t height = 9;

const uint8_t data[] =
{
	0b11111111, 0b11111111, 0b11000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b10000000, 0b00000000, 0b01000000,
	0b11111111, 0b11111111, 0b11000000
};



}




}	// namespace sprite




#endif /* SPRITE_HPP_ */
