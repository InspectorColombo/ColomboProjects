void Driver::ClearScreen()
{
	SendCommand(SET_MEMORY_ADDRESSING_MODE_VERTICAL);
	SetColumnPageAddressesForHVM(0, 127, 0, 7);

	SendDataRawStart();
	for(uint16_t byteCnt = 0; byteCnt < (128*64/8); ++byteCnt)
	{
		if (byteCnt < 8 || (byteCnt >= (128*64/8) - 8))
		{
			SendDataRaw(0xFF);
		}
		else
		{
			SendDataRaw(0x00);
		}
	}
	SendDataRawEnd();
}



