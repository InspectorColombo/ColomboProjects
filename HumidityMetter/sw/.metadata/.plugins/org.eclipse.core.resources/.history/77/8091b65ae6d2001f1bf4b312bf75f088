#ifndef __FONT8X8_HPP__
#define __FONT8X8_HPP__

#include <stdint.h>
#include "fontIf.hpp"


namespace font
{

class Font8x8 : public FontIf
{
public:

	virtual uint8_t* GetCharBitmap(const uint8_t ch) const;
	virtual uint8_t GetWidth() const;
	virtual uint8_t GetHeight() const;

private:

};




}	// namespace font



#endif // __FONT8X8_HPP__
