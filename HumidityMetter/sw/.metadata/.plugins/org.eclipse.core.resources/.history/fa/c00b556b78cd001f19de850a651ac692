// -------------- ADC single read ------------------
// STM32F103C8T6 in LQFP package only supported


#ifndef __ADC_READ_HPP__
#define __ADC_READ_HPP__

#include <stdint.h>

class AdcSingleRead
{
public:
	AdcSingleRead(const AdcNumber adcNumber, const adcChanell adcChannel);

	enum AdcNumber
	{
		ADC_NUMBER1,
		ADC_NUMBER2
	};

	enum AdcChannel
	{
		ADC_CHANNEL0,
		ADC_CHANNEL1,
		ADC_CHANNEL2,
		ADC_CHANNEL3,
		ADC_CHANNEL4,
		ADC_CHANNEL5,
		ADC_CHANNEL6,
		ADC_CHANNEL7,
		ADC_CHANNEL8,
		ADC_CHANNEL9
	};


	uint16_t Read();

private:
	AdcNumber	m_adcNumber;
	AdcChanell	m_adcChannel;

	void Init();

	static void DelayMicroseconds(const uint32_t us);

};




#endif	// __ADC_READ_HPP__
